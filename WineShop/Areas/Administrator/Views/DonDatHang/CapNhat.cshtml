@model WineShop.Models.DonDatHang

@{
    ViewBag.Title = "CapNhat";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<ul class="breadcrumb">
    <li>
        <p>TRANG CẬP NHẬT ĐƠN ĐẶT HÀNG</p>
    </li>
    <li>
        <b>Chỉnh sửa</b>
    </li>
</ul>
<div class="page-title">
    <a href="@Url.Action("Index", "SanPham")">
        <i class="icon-custom-left"></i>
    </a>
    <h3>Trở về - <span class="semi-bold">TRANG DANH SÁCH</span></h3>
</div>

<div class="col-md-6">
    <div class="grid simple vertical green">
        <div class="grid-title no-border">
            <h4>Đơn <span class="semi-bold">đặt hàng</span></h4>
            <div class="tools">
                <a href="javascript:;" class="collapse"></a>
                <a href="javascript:;" class="remove"></a>
            </div>
        </div>
        <div class="grid-body no-border">
            <div class="row-fluid">
                <div>
                    <div class="color-bands green"></div>
                    <div class="color-bands purple"></div>
                    <div class="color-bands red"></div>
                    <div class="color-bands blue"></div>
                    <br>
                    <div>
                       @using (Html.BeginForm())
                       {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            @Html.HiddenFor(model => model.MaDonDatHang)

                            <div class="form-group">
                                @Html.LabelFor(model => model.GhiChu, htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-10">
                                    @Html.TextAreaFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="control-label col-md-6">
                                    Tình trạng
                                </div>
                                <div class="col-md-10">
                                    @Html.DropDownList("MaTinhTrang", (IEnumerable<SelectListItem>)ViewBag.TinhTrangs, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.MaTinhTrang, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Cập nhật" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                       }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
